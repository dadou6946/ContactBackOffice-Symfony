{% extends 'base.html.twig' %}

{% block title %}Back Office{% endblock %}

{% block body %}
    <h1 class="jumbotron text-center">Gestion des messages</h1>
    <div class="container mt-4">

        <div class="row">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Identifiant</th>
                        <th>Statut</th>
                        <th>Détails</th>
                    </tr>
                </thead>
                <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.id }}</td>
                            <td>
                                {% if message.state == 0 %}<p class="alert alert-danger">En attente</p>{% endif %}
                                {% if message.state == 1 %}<p class="alert alert-success">Traité</p>{% endif %}
                            </td>
                            <td>
                                <a class="btn btn-success" href="{{ path("admin.message.detail", {id: message.id}) }}">Voir le message</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>

            </table>
        </div>
    </div>

{% endblock %}