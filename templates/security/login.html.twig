{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1 class="jumbotron text-center">Connexion</h1>
    <div class="container mt-4">

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messagekey | trans(error.messagedata, "security") }}
                </div>
            {% endif %}
            <form action="{{ path("login") }}" method="post">
                <div class="form-group">
                    <label for="username">Identifiant :</label>
                    <input id="username" name="_username" type="text" class="form-control" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input id="password" name="_password" type="password" class="form-control">
                </div>

                <button class="btn btn-success">Se connecter</button>
            </form>
    </div>

{% endblock %}