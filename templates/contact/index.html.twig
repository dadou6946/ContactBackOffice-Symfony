{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}
    <h1 class="jumbotron text-center">Formulaire de contact</h1>
    <div class="container mt-4">

        <div class="row text-center">
            <p>Posez nous des questions !</p>
        </div>
        <hr>

        {% include "_flash.html.twig" %}

        <div class="row">

            <div class="col-md-12">
            {{ form_start(form) }}
            {{ form_row(form._token) }}

            {{ form_row(form.name) }}
            {{ form_row(form.mail) }}
            </div>

            <div class="col-md-12">
            {{ form_row(form.content) }}
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <button class="btn btn-secondary form-control">Envoyer</button>
                </div>
            </div>

            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>

{% endblock %}